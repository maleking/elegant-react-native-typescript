{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "jsx": "react-native",
    "paths": {
      "assets": ["./app/assets/*"],
      "gate": ["./app/gate/*"],
      "utils": ["./app/helpers/*"],
      "i18n": ["./app/i18n/*"],
      "routes": ["./app/routes/*"],
      "store": ["./app/store/*"],
      "view": ["./app/view/*"]
    },
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
